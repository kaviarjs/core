{
  "name": "@kaviar/core",
  "version": "1.0.0",
  "description": "The ultimate module orchestrator for your enterprise-level applications",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaviarjs/core"
  },
  "scripts": {
    "clean": "rimraf dist coverage",
    "compile": "tsc",
    "pretest": "npm run compile",
    "test": "npm run testonly --",
    "test:lint": "eslint './src/**/*.ts'",
    "watch": "tsc -w",
    "testonly": "mocha --reporter spec --full-trace ./dist/__tests__/index.js",
    "testonly-watch": "mocha  --require source-map-support/register --reporter spec --full-trace ./dist/__tests__/index.js --watch",
    "coverage": "node ./node_modules/istanbul/lib/cli.js cover -x '**/__tests__/**' _mocha -- --full-trace ./dist/__tests__/index.js",
    "postcoverage": "remap-istanbul --input coverage/coverage.raw.json --type lcovonly --output coverage/lcov.info",
    "prepublishOnly": "npm run clean && npm run compile",
    "gen-doc": "typedoc ./src/index.ts --exclude ./src/__tests__ --out typeDocs --tsconfig tsconfig.json"
  },
  "dependencies": {
    "merge-deep": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.8.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/chai-as-promised": "^7.1.2",
    "@types/graphql": "^0.11.3",
    "@types/mocha": "^2.2.39",
    "@types/node": "^8.0.28",
    "@typescript-eslint/eslint-plugin": "2.3.0",
    "@typescript-eslint/parser": "2.3.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "6.3.0",
    "eslint-plugin-prettier": "3.1.1",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^6.2.2",
    "prettier": "^1.18.2",
    "remap-istanbul": "^0.9.1",
    "rimraf": "^2.6.2",
    "sinon": "^7.5.0",
    "sinon-chai": "^2.9.0",
    "source-map-support": "^0.5.13",
    "typedoc": "^0.15.0",
    "typescript": "^3.4.2"
  },
  "types": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "license": "MIT"
}
